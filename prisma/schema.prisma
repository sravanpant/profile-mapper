datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  id          String    @id @default(cuid())
  name        String
  email       String    @unique
  description String?
  imageUrl    String?
  
  // Address Information
  address     Address?
  
  // Contact Information
  phone       String?
  website     String?
  
  // Geographical Coordinates
  latitude    Float?
  longitude   Float?
  
  // Metadata
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Optional Relationships or Additional Fields
  tags        String[]
  isActive    Boolean   @default(true)
}

model Address {
  id        String   @id @default(cuid())
  street    String
  city      String
  country   String
  postalCode String?
  
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId String   @unique
}